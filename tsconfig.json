{
  "include": ["server/**/*", "eslintrc.js", "src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
